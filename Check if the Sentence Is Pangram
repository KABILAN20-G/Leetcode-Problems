class Solution {
    public boolean checkIfPangram(String sentence) {
        Set<Character> alpha=new HashSet<>();

        for(int i='a';i<='z';i++)
        {
            alpha.add((char) i);
        }

        for(int i=0;i<sentence.length();i++)
        {
            alpha.remove(sentence.charAt(i));
            if(alpha.isEmpty())
            return true;
        }

        return false;
    }
}
